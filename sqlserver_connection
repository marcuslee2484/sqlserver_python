#SQL Server Connection Setup

class SQL:
    
    def __init__(self, Srv, Db, shm):
       
       import pyodbc
        
       conn = pyodbc.connect('Driver={SQL Server};'
                              'Server=' + str(Srv) + ';'
                              'Database=' + str(Db) + ';'
                              'Trusted_Connection=yes;')
            
       self.cursor = conn.cursor()
